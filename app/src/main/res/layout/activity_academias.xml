<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/corPrincipal">

        <ImageView
            android:id="@+id/comeBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_voltar"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_preto"
            android:layout_marginLeft="130dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSantaFe"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/borda"
        android:backgroundTint="@color/corPrincipal"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:text="santa fé"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnForcaBruta"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/borda"
        android:backgroundTint="@color/corPrincipal"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:text="Força bruta"
        android:textSize="25dp"/>


</LinearLayout>
