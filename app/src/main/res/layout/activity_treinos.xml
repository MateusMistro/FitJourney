<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/corPrincipal">

        <ImageView
            android:id="@+id/btnVoltar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_voltar"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_preto"
            android:layout_marginLeft="130dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnTreinoA"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/borda"
        android:backgroundTint="@color/corPrincipal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="treino a"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnTreinoB"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/borda"
        android:backgroundTint="@color/corPrincipal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="treino b"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnTreinoC"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/borda"
        android:backgroundTint="@color/corPrincipal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="treino c"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnTreinoD"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/borda"
        android:backgroundTint="@color/corPrincipal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="treino d"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/btnHistorico"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/borda"
        android:backgroundTint="@color/corPrincipal"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="historico de treinos"
        android:textSize="17dp"/>

</LinearLayout>
